<h2>Articles Overview</h2>

<p id="notice"><%= notice %></p>

<%= link_to 'Add a new article', new_article_path, class: 'button' %>

<table>
  <thead>
    <tr>
      <th>Enabled</th>
      <th>Number</th>
      <th>Title</th>
      <th>Category</th>
      <th>Posted at</th>
      <th colspan="3">Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.enabled %></td>
        <td><%= article.number %></td>
        <td><%= article.title %></td>
        <td><%= article.category %></td>
        <td><%= article.posted_at.strftime("%b %d, %Y") %></td>
        <td><%= link_to 'view', article %></td>
        <td><%= link_to 'edit', edit_article_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

