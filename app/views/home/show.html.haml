%body
  - content_for :navigation do
    - if @article
      %p
        %small= link_to('&larr; previous article'.html_safe, blog_path(Article.previous(@article)))
        |
        %small= link_to('view all', root_path)
  - if @article
    %article
      %header
        %h2= @article.title
        %p
          Posted on
          %time= friendly_date(@article.posted_at)
          in
          = link_to @article.category, category_path(@article.category.title), class: 'tag'
      = @article.copy
  - else
    %p Your requested page was not found!
    %p
